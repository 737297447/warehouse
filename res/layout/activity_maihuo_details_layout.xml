<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="11" >

        <TextView
            android:id="@+id/detail_layout_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="4"
            android:text="消费金额"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/detail_layout_valye"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="14sp" />
        
         <TextView
            android:id="@+id/detail_layout_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center" >

            <Button
                android:id="@+id/detail_layout_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/maihuo_btn_delete" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tongxunlu_depart_line" />

</LinearLayout>