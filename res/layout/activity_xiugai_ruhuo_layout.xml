<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/all_bg"
    android:orientation="vertical"
     >

    <include layout="@layout/all_action_title_bar"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="8">
    <!-- 第1行 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/gysxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司名称："
                android:textColor="@android:color/black" />

       
            <TextView
                android:id="@+id/gsmcs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:background="@color/white"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="张非" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/spgg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品编号："
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/spgge"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                       android:background="@color/white"
                android:textColor="@color/table_text_color"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical"
                android:paddingLeft="3dp" 
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- 第2行 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/spmc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称："
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/spmcs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:background="@color/white"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="张非" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/jldw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/gsmcs"
                android:text="计量单位："
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/jldwe"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                     android:background="@color/white"
                android:textColor="@color/table_text_color"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical"
                android:paddingLeft="3dp" 
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- 第3行 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lxr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联  系 人 ："
                android:textColor="@android:color/black" />
            
            <TextView
                android:id="@+id/lxre"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                       android:background="@color/white"
                android:textColor="@color/table_text_color"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical"
                android:paddingLeft="3dp" 
                android:singleLine="true" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/jhdj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进货单价："
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/jhdje"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:hint="请输入进货单价"
                android:phoneNumber="true"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- 第4行 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lxdh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话："
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/lxdhe"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                       android:background="@color/white"
                android:textColor="@color/table_text_color"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical"
                android:paddingLeft="3dp" 
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/jhsl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进货数量："
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/jhsle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:hint="请输入进货数量"
                android:phoneNumber="true"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- 第5行 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/jhrq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进货日期："
                android:textColor="@android:color/black" />

            <DatePicker
                android:id="@+id/jhrqd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/save"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="save"
                android:background="@drawable/bt_nonal_bg"
                android:text="保存" />

            <Button
                android:id="@+id/back"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="back"
                android:background="@drawable/bt_nonal_bg"
                android:layout_marginTop="5dp"
                android:text="返回" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>