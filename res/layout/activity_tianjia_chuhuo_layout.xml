<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/all_bg"
    android:orientation="vertical"
    android:weightSum="8" >

    <include layout="@layout/all_action_title_bar" />
    <!-- 第1行 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/gysxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司名称："
                android:textColor="@android:color/black" />

            <Spinner
                android:id="@+id/gsmcs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/xzgs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/spgg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品编号："
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/spgge"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="3dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:singleLine="true"
                android:textColor="@color/table_text_color" />
        </LinearLayout>
    </LinearLayout>

    <!-- 第2行 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/spmc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称："
                android:textColor="@android:color/black" />

            <Spinner
                android:id="@+id/spmcs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/xzsp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/jldw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/gsmcs"
                android:text="仓库数量："
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/jldwe"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="3dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:singleLine="true"
                android:textColor="@color/table_text_color" />
        </LinearLayout>
    </LinearLayout>

    <!-- 第3行 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lxr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联  系 人 ："
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/lxre"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="3dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:singleLine="true"
                android:text="张非"
                android:textColor="@color/table_text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/jhdj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出货单价："
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/jhdje"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:hint="请输入出货单价"
                android:phoneNumber="true"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- 第4行 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lxdh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话："
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/lxdhe"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="3dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:singleLine="true"
                android:text="13838792109"
                android:textColor="@color/table_text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/jhsl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出货数量："
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/jhsle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:hint="请输入出货数量"
                android:phoneNumber="true"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- 第5行 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/jhrq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单日期："
                android:textColor="@android:color/black" />

            <DatePicker
                android:id="@+id/jhrqd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计量单位："
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/jiliangdanwei"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:singleLine="true"
                    android:textColor="@color/table_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="4" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:background="@drawable/bt_nonal_bg"
                    android:onClick="save"
                    android:text="保存" />

                <Button
                    android:id="@+id/back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/bt_nonal_bg"
                    android:onClick="back"
                    android:text="返回" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>